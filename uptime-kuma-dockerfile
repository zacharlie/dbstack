FROM node:14-buster-slim as base
WORKDIR /app

RUN apt update && \
    apt --yes --no-install-recommends install git wget python3 python3-pip python3-cryptography python3-six python3-yaml python3-click python3-markdown python3-requests python3-requests-oauthlib \
    sqlite3 iputils-ping util-linux dumb-init && \
    pip3 --no-cache-dir install apprise==0.9.7 && \
    npm install -g npm@latest && \
    rm -rf /var/lib/apt/lists/*

FROM base as git
WORKDIR /app
RUN git clone https://github.com/louislam/uptime-kuma.git .
RUN wget https://patch-diff.githubusercontent.com/raw/louislam/uptime-kuma/pull/1092.diff
RUN git apply 1092.diff

FROM git as node
WORKDIR /app
RUN rm node_modules -rf && \
    rm package.lock -f
RUN npm ci --production

# FROM node as check
# docker build --progress=plain . -f uptime-kuma-dockerfile -t custom/uptime-kuma
# get registry
# RUN echo $(npm get registry)
# check config
# RUN echo $(npm config ls -l)

FROM node as vite
WORKDIR /app
# workarounds for socket timeout npm ERR!
# set registry to http from https
RUN npm config set registry="http://registry.npmjs.org/"
# default 10000
# RUN npm config set fetch-retry-mintimeout 20000
# default 60000
# RUN npm config set fetch-retry-maxtimeout 120000
RUN npm install vite

FROM vite as build
WORKDIR /app
RUN npx vite build --config ./config/vite.config.js && \
    chmod +x /extra/entrypoint.sh

EXPOSE 3001
VOLUME ["/data"]
HEALTHCHECK --interval=60s --timeout=30s --start-period=180s --retries=5 CMD node extra/healthcheck.js
ENTRYPOINT ["/usr/bin/dumb-init", "--", "/extra/entrypoint.sh"]
CMD ["node", "/server/server.js"]
